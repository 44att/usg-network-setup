{
  "firewall": {
    "group": {
      "network-group": {
				"remote_user_vpn_network": {
					"description": "Remote User VPN subnets",
					"network": [
						"{{ remote_user_vpn_subnet }}"
					]
				}
			}
    },
    "name": {
      "WAN_LOCAL": {
        "rule": {
          "2000": {
            "action": "accept",
            "description": "Firewall for UDP port {{ wg99_port }}",
            "destination": {
              "port": "{{ wg99_port }}"
            },
            "protocol": "udp"
          }
        }
      }
    },
    "modify": {
      "VPN-UK": {
        "rule": {
          "10": {
            "action": "modify",
            "description": "Wireguard UK connection",
            "modify": {
              "table": "2"
            },
            "destination": {
              "address": "!192.168.0.0/16"
            },
            "source": {
              "address": "192.168.10.0/24"
            }
          }
        }
      },
      "VPN-USA": {
        "rule": {
          "20": {
            "action": "modify",
            "description": "Wireguard USA connection",
            "modify": {
              "table": "3"
            },
            "destination": {
              "address": "!192.168.0.0/16"
            },
            "source": {
              "address": "192.168.20.0/24"
            }
          }
        }
      },
      "VPN-REMOTE": {
        "rule": {
          "30": {
            "action": "modify",
            "description": "Wireguard tunnel remote VPN connection",
            "modify": {
              "table": "2"
            },
            "destination": {
              "address": "!192.168.0.0/16"
            },
            "source": {
              "group": {
                "network-group": "remote_user_vpn_network"
              }
            }
          }
        }
      }
    },
    "source-validation": "disable"
  },
  "interfaces": {
    "ethernet": {
      "eth1": {
        "vif": {
          "10": {
            "firewall": {
              "in": {
                "modify": "VPN-UK",
                "name": "LAN_IN"
              }
            }
          },
          "20": {
            "firewall": {
              "in": {
                "modify": "VPN-USA",
                "name": "LAN_IN"
              }
            }
          }
        }
      }
    },
    "wireguard": {
      "wg99": {
        "address": [
          "{{ wg99_ipv4_address }}",
          "{{ wg99_ipv6_address }}"
        ],
        "firewall": {
            "in": {
                "modify": "VPN-REMOTE",
                "name": "LAN_IN"
            },
            "local": {
                "name": "LAN_LOCAL"
            },
            "out": {
                "name": "LAN_OUT"
            }
        },
        "listen-port": "{{ wg99_port }}",
        "mtu": "{{ wg99_mtu }}",
        "peer": [{
            "{{ iphone_public_key }}": {
                "allowed-ips": [
                    "{{ iphone_allowed_ipv4_address }}",
                    "{{ iphone_allowed_ipv6_address }}"
                ],
                "persistent-keepalive": 25
            }
        }],
        "private-key": "/config/auth/wireguard/wg_private.key",
        "route-allowed-ips": "false"
      },
      "wg0": {
        "address": [
          "{{ wg0_address }}"
        ],
        "mtu": "1420",
        "peer": {
          "{{ wg0_public_key }}": {
            "allowed-ips": [
              "0.0.0.0/0"
            ],
            "endpoint": "{{ wg0_endpoint }}"
          }
        },
        "private-key": "{{ wg0_private_key }}",
        "route-allowed-ips": "false"
      },
      "wg1": {
        "address": [
          "{{ wg1_address }}"
        ],
        "mtu": "1420",
        "peer": {
          "{{ wg1_public_key }}": {
            "allowed-ips": [
              "0.0.0.0/0"
            ],
            "endpoint": "{{ wg1_endpoint }}"
          }
        },
        "private-key": "{{ wg1_private_key }}",
        "route-allowed-ips": "false"
      }
    }
  },
  "protocols": {
    "static": {
      "table": {
        "2": {
          "interface-route": {
            "0.0.0.0/0": {
              "next-hop-interface": {
                "wg0": "''"
              }
            }
          }
        },
        "3": {
          "interface-route": {
            "0.0.0.0/0": {
              "next-hop-interface": {
                "wg1": "''"
              }
            }
          }
        }
      }
    }
  },
  "service": {
    "nat": {
      "rule": {
        "1500": {
          "description": "DNAT for qBittorrent port {{ qbittorrent_port }}",
          "destination": {
            "port": "{{ qbittorrent_port }}"
          },
          "inbound-interface": "wg0",
          "inside-address": {
            "address": "{{ qbittorrent_address }}",
            "port": "{{ qbittorrent_port }}"
          },
          "protocol": "tcp",
          "type": "destination"
        },
        "5004": {
          "description": "Masquerade to VPN wg0",
          "log": "disable",
          "outbound-interface": "wg0",
          "source": {
            "address": "192.168.10.0/24"
          },
          "destination": {
            "address": "0.0.0.0/0"
          },
          "type": "masquerade"
        },
        "5005": {
          "description": "Masquerade to VPN wg1",
          "log": "disable",
          "outbound-interface": "wg1",
          "source": {
            "address": "192.168.20.0/24"
          },
          "destination": {
            "address": "0.0.0.0/0"
          },
          "type": "masquerade"
        },
        "5006": {
          "description": "All other local clients",
          "log": "disable",
          "outbound-interface": "pppoe0",
          "protocol": "all",
          "source": {
            "address": "192.168.1.0/24"
          },
          "type": "masquerade"
        },
        "5007": {
          "description": "Masquerade remote_user_vpn_network to WAN",
          "log": "disable",
          "outbound-interface": "wg0",
          "protocol": "all",
          "source": {
            "group": {
              "network-group": "remote_user_vpn_network"
            }
          },
          "type": "masquerade"
        },
        "6001": {
          "disable": "''"
        },
        "6002": {
          "disable": "''"
        },
        "6003": {
          "disable": "''"
        }
      }
    }
  }
}
